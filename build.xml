<?xml version="1.0"?>
<project name="j-Algo" default="core">

  <target name="core-linux">
    <echo message="Building of core for linux started ..."/>
    
    <jar destfile="dist/linux/jalgo.jar" 
      basedir="src" 
      excludes="j-algo.*">
      <manifest>
        <attribute name="Built-By" value="${user.name}"/>
        <attribute name="Main-Class" value="org.jalgo.main.Jalgo"/>
        <attribute name="Class-Path" value="extlibs/jface.jar extlibs/draw2d.jar extlibs/boot.jar extlibs/runtime.jar extlibs/swt.jar extlibs/swt-pi.jar"/>
      </manifest>    
    </jar>
    
	<echo message="... building of core for linux finished."/>
  </target>
  
    <target name="core-win">
    <echo message="Building of core for win started ..."/>
    
    <jar destfile="dist/win/jalgo.jar" 
      basedir="src" 
      excludes="j-algo.*">
      <manifest>
        <attribute name="Built-By" value="${user.name}"/>
        <attribute name="Main-Class" value="org.jalgo.main.Jalgo"/>
        <attribute name="Class-Path" value="extlibs/jface.jar extlibs/draw2d.jar extlibs/boot.jar extlibs/runtime.jar extlibs/swt.jar"/>
      </manifest>    
    </jar>
    
	<echo message="... building of core for win finished."/>
  </target>
   
</project>